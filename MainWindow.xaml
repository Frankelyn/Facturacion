<Window x:Class="VentasWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VentasWPF"
        mc:Ignorable="d"
        Title="Sistema de Ventas" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel >
            <Menu>
                <MenuItem x:Name="RegistrosMenuItem" Header="Registros">
                    <MenuItem x:Name="RegistroProductosMenuItem" Header="Registro de Productos" Click="RegistroProductosMenuItem_Click"/>
                    <MenuItem x:Name="RegistroFacturasMenuItem" Header="Facturar" Click="RegistroFacturasMenuItem_Click"/>
                </MenuItem>

                <MenuItem Header="Consultas">
                    <MenuItem x:Name="InventarioMenuItem" Header="Inventario" Click="InventarioMenuItem_Click"/>
                    
                </MenuItem>


            </Menu>
        </StackPanel>
    </Grid>
</Window>
